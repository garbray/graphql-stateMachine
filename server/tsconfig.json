{
  "compilerOptions": {
    "module": "CommonJS",
    "types": ["jest", "node"],
    "sourceMap": true,
    "composite": true,
    "target": "ES2018",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "exclude": ["**/node_modules/**", "**/__tests__/**"]
}
